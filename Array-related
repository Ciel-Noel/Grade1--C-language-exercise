//input n positive integer(1<n<=10) and save them to array,find max,min,and ave.Then work out indexes of max and min in array. 
#include <stdio.h>
void main(){
    int num, i;
    printf("你要输入几个正整数？\n");
    scanf("%d",&num);    //确定数组的长度
    int arr[num];   //C99标准下，数组长度可用变量表示
    printf("请输入正整数，每输入一个数字，以回车键分隔\n");
    for (i = 0;i < num;i++){
        scanf("%d",&arr[i]);    //遍历法赋值数组
    }
    int max,min = arr[0];    //引入中间变量并赋初值
    int j, k, sum = 0;   //中间变量保存下标，定义总和
    float ave;  //平均值需要引入浮点数
    for (i = 0;i < num;i++){
        if (max < arr[i]){
            max = arr[i];
            j = i;
        }
        if (min > arr[i]){
            min = arr[i];   //遍历找到最大最小值
            k = i;
        }
        sum += arr[i];
    }
    ave = (float)sum / num;    //强制数据转换，确保浮点数参与运算
    printf("数组的最大值为%d,最小值为%d,平均值为%.2f,最大值下标为%d,最小值下标为%d",max,min,ave,j,i);
}
